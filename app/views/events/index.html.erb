<section class="breadcrumb-wrapper">
  <div class="container">
    <h2>Events</h2>
  </div>
</section>
<div class="container">
  
  <div style="padding:0;">
    <div>
      <br><br>
      <div class="container">
        <div class="col-md-12 text-center"><%= link_to "Add New Event", new_event_path, class: "btn btn-success btn-block" %></div>
        <div class="container-fluid">
          <div class="table-responsive">
            <table class="table table-condensed">
              <thead>
                <tr>
                  <th>Title</th>
                  <th>Edit</th>
                  <th>More Info</th>
                </tr>
              </thead>
              <tbody>
                <% @events.each do |event| %>
                  <tr>
                    <td>
                      <%= event.title %>
                    </td>                            
                    <td>
                        <%= link_to "Edit", edit_event_path(event), class: "btn btn-info" %>
                    </td>
                    <td>
                        <%= link_to "View", event_path(event), class: 'btn btn-primary' %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>

      </div>
    </div>
  </div>

</div>
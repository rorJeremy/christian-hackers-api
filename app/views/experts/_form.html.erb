<div class="text-center">
<%= form_for(@expert, multipart: true) do |f| %>
  <% if @expert.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@expert.errors.count, "error") %> prohibited this expert from being saved:</h2>
      <ul>
      <% @expert.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-6">
      <div class="field form-group">
        <%= f.label :name %><br>
        <%= f.text_field :name, :class => 'form-control' %>
      </div>
      <div class="field form-group">
        <%= f.label :main_link %><br>
        <%= f.text_field :main_link, :class => 'form-control' %>
      </div>
      <div class="field form-group">
        <%= f.label :secondary_link %><br>
        <%= f.text_field :secondary_link, :class => 'form-control' %>
      </div>
    </div>

    <div class="col-md-6">
      <div class="field form-group">
        <%= f.label :description %><br>
        <%= f.text_area :description, :class => 'form-control' %>
      </div>
      <div class="field form-group">
        <%= f.label :week %><br>
        <%= f.select :week, [1, 2, 3, 4, 5, 6], :class => 'form-control' %>
      </div>
  </div>

  <div class="col-md-12">
    <div class="actions form-group">
      <% if @expert.new_record? %>
        <%= link_to "Cancel", experts_path, class: 'btn btn-danger' %>
      <% else %>
        <%= link_to "Cancel", expert_path(@expert), class: 'btn btn-danger' %>
      <% end %>
      <%= f.submit :class => 'btn btn-success' %>
    </div>
  </div>
<% end %>
</div>